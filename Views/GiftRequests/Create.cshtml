@model lab5_start.Models.ViewModels.GiftRequestInputModel

@{
    ViewData["Title"] = "Request Gift";
}

<h1>Request Gift</h1>

<h4>Select a gift you want</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GiftId" class="control-label">Gift</label>
                <select asp-for="GiftId" class ="form-control" asp-items="ViewBag.GiftId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Request" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
