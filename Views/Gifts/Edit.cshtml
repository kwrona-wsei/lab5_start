@model lab5_start.Models.ViewModels.GiftViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Gift</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GiftName" class="control-label"></label>
                <input asp-for="GiftName" class="form-control" />
                <span asp-validation-for="GiftName" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Santa"))
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
